<h1>All Task</h1>

<ul>

<% @tasks.each do |task| %>
 <li>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
    <%= link_to task.title, view_path(task) %>
   <%= link_to "delete", view_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" }%>
  </li>
<% end %>
</ul>
